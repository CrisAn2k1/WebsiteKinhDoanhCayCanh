@using GoogleRecaptchaMvc

<style>
    .btn.btn-primary:hover {
        border: 1px solid #82ae46 !important;
        background: transparent !important;
        color: #82ae46 !important;
    }
</style>
<section>
    <div style="font-family: 'Sans-serif'">
        <div class="hero-wrap hero-bread" style="background-image: url('/Template/img/banner-img.jpg');opacity:0.9" ;>
            <div>
                <div class="container">
                    <div class="row no-gutters slider-text align-items-center justify-content-center">
                        <div class="col-md-9 ftco-animate text-center bg-text">
                            <h1 class="mb-0 bread" style="color: antiquewhite; font-family: 'cursive', 'Amatic SC','Liberation Mono'; ">QUÊN MẬT KHẨU?</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<div class="row">
    <div class="col-lg-6  col-md-6">
        <section id="socialLoginForm">
            <div class="form-group" style="text-align:center">
                <div style="text-align:center">
                    <h4 style="color:green"> AT-TREES Xin chào</h4>
                </div>
            </div>

            <div class="form-group" style="text-align:center">
                <div style="text-align:center">
                    <img src="~/Template/img/bonsai1.png" width="250" height="250" ; />
                </div>
            </div>

        </section>
    </div>
    <div class="col-lg-6  col-md-6">
        @*<h2>@ViewBag.Title.</h2>*@
        <h2 class="text-center">Quên Mật Khẩu?</h2>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <h6 style="color:red; text-align:center; padding-top: 20px">@ViewBag.Thongbao</h6>
                <label class="control-label col-md-2">Email: </label>
                <input type="text" name="Email" class="form-control col-md-10" required />
            </div>
            <div>@Html.RecaptchaV2("6LeJ3jogAAAAAGmMJi3Bzqev9W5Nw_blm8_75lL6")</div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary py-3 px-4" value="Gửi mã xác nhận" />
                </div>
            </div>
        }
    </div>
</div>
<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>

