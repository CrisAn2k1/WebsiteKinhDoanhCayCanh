@model WebsiteKinhDoanhCayCanh.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<br />
<section>
    <div style="font-family: 'Sans-serif'">
        <div class="hero-wrap hero-bread" style="background-image: url('/Template/img/banner-img.jpg');opacity:0.9" ;>
            <div>
                <div class="container">
                    <div class="row no-gutters slider-text align-items-center justify-content-center">
                        <div class="col-md-9 ftco-animate text-center bg-text">
                            <h1 class="mb-0 bread" style="color:antiquewhite">ĐĂNG KÝ</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
</section>
<br />
<br />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="color:forestgreen">Tạo tài khoản mới.</h4>

    <hr />
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Họ tên", @style = "height:40px" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "height:40px" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @style = "height:40px" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu", @style = "height:40px" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Số điện thoại", @style = "height:40px" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ", @style = "height:40px" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="text-align:center" ;>
                            <input type="submit" class="btn btn-default" value="Đăng ký" style="background-color: #7fad39;" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">

                    <div class="form-group" style="text-align:center">
                        <div style="text-align:center">
                            <br />
                            <h4 style="color:green"> AT-TREES Xin chào</h4>
                            <p>Vui lòng đăng ký tài khoản để mua hàng !</p>
                        </div>
                    </div>

                    <div class="form-group" style="text-align:center">
                        <div style="text-align:center">
                            <img src="~/Template/img/bonsai2.png" width="350" height="350" ; />
                        </div>
                    </div>                 

                </div>
                </div>
            </div>   

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
