@model WebsiteKinhDoanhCayCanh.Models.NhomSP
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 style=" margin-top:20px;">Chỉnh sửa nhóm sản phẩm</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id_Nhom)

                    <div class="form-group">
                        <strong class="control-label col-md-2">Tên nhóm </strong>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.tenNhom , new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tenNhom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong class="control-label col-md-2">Mã cách chăm sóc </strong>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.id_CCS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.id_CCS, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" /> |
                        <a class="btn btn-info" href='@Url.Action("Index", "NhomSP")' style="margin:10px 0px;">
                            Trở về
                        </a>
                    </div>


                </div>}
        </div>
    </main>
</div>

