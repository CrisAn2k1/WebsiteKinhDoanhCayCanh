@model WebsiteKinhDoanhCayCanh.Models.NhomSP
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">

            <h2 style="text-align: center; margin-top: 20px; font-weight: bold; color: forestgreen; text-transform: capitalize;">Thêm nhóm sản phẩm </h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <strong class="control-label col-md-2">Mã nhóm sản phẩm</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.id_Nhom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.id_Nhom, "", new { @class = "text-danger" })
                    </div>
                    <strong class="control-label col-md-2">Tên Nhóm sản phẩm</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tenNhom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tenNhom, "", new { @class = "text-danger" })
                    </div>
                    <strong class="control-label col-md-2">Mã cách chăm sóc</strong>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.id_CCS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.id_CCS, "", new { @class = "text-danger" })
@*                        @Html.DropDownList("id_CCS", (IEnumerable<SelectListItem>)ViewBag.id_CachChamSoc, htmlAttributes: new { @class = "form-control", @style = "min-width:120px" })
                        @Html.ValidationMessageFor(model => model.id_CCS, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-success" />   |
                            <a class="btn btn-info" href='@Url.Action("Index", "NhomSP")' style="margin:10px 0px;">
                                Trở về
                            </a>
                        </div>
                    </div>
                </div>
                }
        </div>
    </main>
</div>


