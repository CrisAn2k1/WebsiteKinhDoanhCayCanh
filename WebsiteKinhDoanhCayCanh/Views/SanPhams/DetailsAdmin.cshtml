@model WebsiteKinhDoanhCayCanh.Models.SanPham

@{ ViewBag.Title = "DetailsAdmin";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }


<style>
    dl dt {
        padding-left: 10% !important;
        text-align: start;
        min-width: 40%;
    }

    dl dd {
        text-align: start;
        min-width: 50%;
        max-width: 50% !important;
    }

    tr td {
        text-align: center;
        vertical-align: middle;
    }

    tr th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<div id="layoutSidenav_content">
    <main>
        <h2 style="text-align: center; margin-top: 20px; font-weight: bold; color: forestgreen;">Chi tiết sản phẩm</h2>
        <div class="container-fluid px-4" style=" margin-top:20px;">
            <div class="d-flex justify-content-center align-items-center flex-column">
                
                <dl class="dl-horizontal" style="display:flex;flex-wrap:wrap;justify-content:center ;width:65%">
                    <dt><hr /></dt>
                    <dd><hr /></dd>
                    <dt class="col-md-2" >
                        Mã đơn hàng:
                    </dt>
                    <dd class="col-md-10" >
                        @Html.DisplayFor(model => model.id_SP)
                    </dd>
                    <dt class="col-md-2">
                        Tên sản phẩm:
                    </dt>
                    <dd class="col-md-10">
                        @Html.DisplayFor(model => model.tenSP)
                    </dd>

                    <dt class="col-md-2">
                        Hình:
                    </dt>
                    <dd class="col-md-10" >
                        <img src="@Model.HinhAnhSP.Where(p => p.id_SP == Model.id_SP).FirstOrDefault().duongDan" alt="thumbnail" width="150" />
                    </dd>
                    <dt class="col-md-2">
                        Mô tả:
                    </dt>
                    <dd class="col-md-10">
                        @Html.DisplayFor(model => model.mota)
                    </dd>
                    <dt class="col-md-2">
                        Số lượng:
                    </dt>
                    <dd class="col-md-10">
                        @Html.DisplayFor(model => model.soLuong)
                    </dd>
                    <dt class="col-md-2">
                        Đơn vị tính:
                    </dt>
                    <dd class="col-md-10" >
                        @Html.DisplayFor(model => model.DVT)
                    </dd>
                    <dt class="col-md-2">
                        Giá:
                    </dt>
                    <dd class="col-md-10" >
                        @String.Format("{0:0,0}", @Model.gia) VNĐ
                    </dd>
                    <dt class="col-md-2">
                        Phần trăm giảm giá:
                    </dt>
                    <dd class="col-md-10" >
                        @Html.DisplayFor(model => model.phanTramGiamGia) %
                    </dd>

                    <dt class="col-md-2">
                        Cách trồng:
                    </dt>
                    <dd class="col-md-10" >
                        @Html.DisplayFor(model => model.ThongTinThemVeSP.cachTrong)
                    </dd>
                    <dt class="col-md-2">
                        Công dụng:
                    </dt>
                    <dd class="col-md-10" >
                        @Html.DisplayFor(model => model.ThongTinThemVeSP.congDung)
                    </dd>
                    <dt><hr /></dt>
                    <dd><hr /></dd>

                </dl>
            </div>
            <div>

                <hr />
                <p><strong>Chi tiết cập nhật</strong></p>
                <table class="table table-bordered table-success">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                Tên sản phẩm
                            </th>

                            <th>
                                Người cập nhật
                            </th>
                            <th>
                                Ngày cập nhật
                            </th>
                            <th>
                                Thao tác
                            </th>

                        </tr>
                    </thead>
                    <tbody class="table-light">
                        @foreach (var item in Model.CTCapNhat)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SanPham.tenSP)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.id_User)
                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngayCapNhat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.thaoTac)
                                </td>
                            </tr>
}
                    </tbody>
                </table>
            </div>
            <p>

                @Html.ActionLink("Sửa", "Edit", new { id = Model.id_SP }, new { @class = "btn btn-info" }) |
                <a class="btn btn-success" href='@Url.Action("IndexAdmin", "SanPhams")' style="margin:10px 0px;">
                    Trở về
                </a>

            </p>
        </div>
    </main>
</div>