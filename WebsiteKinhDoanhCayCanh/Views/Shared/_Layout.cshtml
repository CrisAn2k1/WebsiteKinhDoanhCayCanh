        <div class="container">

            <a class="navbar-brand" href="/Home/Index" style="font-family:  'Lora', Georgia, serif;"><img src="~/Template/img/bonsai1.png" width="60" />AT-TREES</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>
            @using WebsiteKinhDoanhCayCanh.Models;
            @{
                MyDataEF db = new MyDataEF();
                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a href="/Home" class="nav-link">Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/SanPhams" id="dropdown04" aria-haspopup="true" aria-expanded="false">Sản Phẩm</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                @foreach (var item in db.NhomSP.ToList())
                                {
                                    <a class="dropdown-item" href="@Url.Action("Index", "SanPhams", new { @id_Nhom = item.id_Nhom })">@item.tenNhom</a>
                                }

                                @*<a class="dropdown-item" href="product-single.html">Cây trong nhà</a>
                                    <a class="dropdown-item" href="shop.html">Chậu Bonsai</a>
                                    <a class="dropdown-item" href="/Home/Cart.html">Phụ kiện Bonsai</a>
                                    <a class="dropdown-item" href="checkout.html">Checkout</a>*@
                            </div>
                        </li>
                        <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                        <li class="nav-item"><a @*href="/Home/Blog"*@ class="nav-link">Blog</a></li>
                        <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                        <li>@Html.Action("GiohangPartial", "GioHangs")</li>&emsp;
                        <li style="display:flex;flex-direction:column;justify-content:center"> @Html.Partial("_LoginPartial") </li>
                    </ul>
                    <script>
                        Array.from($('.nav-link')).forEach(function (item) {
                            if (location.href.split('/')[3].includes(item.href.split('/')[3]) && item.href.split('/')[4] == window.location.href.split('/')[4]) {
                                item.style = 'color: #28a53f;transform: translateY(-3px);font-size: 13px;background: #00ff6b17;'
                            }
                            else
                                item.style.color = 'black';
                        })</script>
                </div>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="ftco-footer ftco-section">
        <div class="container">
            <div class="row">
                <div class="mouse">
